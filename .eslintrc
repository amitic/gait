{
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "script",
        "ecmaFeatures": {}
    },
    "plugins": [
        "json",
        "chai-expect",
        "mocha",
        "sinon"
    ],
    "rules": {
        "strict": 0,
        "no-await-in-loop": 0,
        "no-restricted-syntax": 0,
        "no-underscore-dangle": [
            0
        ],
        "mocha/no-exclusive-tests": "error",
        "no-console": 0,
        "consistent-return": 0,
        "no-case-declarations": 0,
        "global-require": 0,
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "func-names": 0,
        "linebreak-style": 0,
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
            "warn",
            {
                "code": 120,
                "ignoreTemplateLiterals": true,
                "ignoreRegExpLiterals": true
            }
        ],
        "prefer-template": "warn",
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "arrow-body-style": "off",
        "object-curly-newline": [
            "error",
            {
                "ObjectExpression": {
                    "minProperties": 12,
                    "multiline": true,
                    "consistent": true
                },
                "ObjectPattern": {
                    "minProperties": 12,
                    "multiline": true,
                    "consistent": true
                },
                "ImportDeclaration": {
                    "minProperties": 4,
                    "multiline": true,
                    "consistent": true
                },
                "ExportDeclaration": {
                    "minProperties": 4,
                    "multiline": true,
                    "consistent": true
                }
            }
        ],
        "one-var-declaration-per-line": [
            "error",
            "initializations"
        ],
        "one-var": [
            "error",
            {
                "initialized": "never",
                "uninitialized": "consecutive"
            }
        ],
        "prefer-destructuring": 0,
        "no-empty": ["error", { "allowEmptyCatch": true }],
        "newline-per-chained-call": [
            "warn",
            { "ignoreChainWithDepth": 8 }
        ]
    }
}
